doctype html
html
	head
		title= title + ' | ' + appname
		link(rel="stylesheet", href="/bootstrap/bootstrap.css")
		link(rel="stylesheet", href="/stylesheets/main.css")
		link(rel="stylesheet", href="/stylesheets/style.css")

	body

		.container
			.navbar.navbar-default
				.navbar-header
					ul.nav.navbar-nav.menu
						li(class={active: currentUrl === '/tasks'} )
							a(href='/tasks') List tasks
						li(class={active: currentUrl === '/tasks/completed'} )
							a(href="/tasks/completed") Completed

			.alert.alert-dismissable
			h1= title
			p Welcome to the Todo app by&nbsp; 
				a(href='#') @me
				|. Please enjoy.
			br
			block content

	script(src='/javascripts/jquery.js', type="text/javascript")
	script(src='/javascripts/main.js', type="text/javascript")